<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appp_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:tint="@color/white">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Connection"
                    android:textColor="@color/white"
                    android:textSize="22sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/id_txt_name"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="PariBF"
            android:textColor="@color/white"
            android:textSize="46sp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_border"
            android:layout_below="@+id/id_txt_name"
            android:orientation="vertical">
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:text="error"
                android:id="@+id/id_error_login"
                android:visibility="gone"
                android:textColor="@color/red"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp">
            </com.google.android.material.textfield.MaterialAutoCompleteTextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="40dp"
                android:hint="Nom utilisateur"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxStrokeColor="@color/icon_color"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="@color/appp_color"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:id="@+id/id_usersConnect"
                    android:drawableStart="@drawable/baseline_person_24" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="40dp"
                android:hint="Mot de passe"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxStrokeColor="@color/icon_color"
                android:textColorHint="@color/black"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="@color/appp_color"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/id_passwordConnect"
                    android:drawableStart="@drawable/baseline_lock_24" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:layout_margin="40dp"
                android:padding="10dp"
                android:id="@+id/btn_login"
                android:text="se connecter"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:cornerRadius="30dp"
                android:textAllCaps="true">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Vous n'avez pas un compte ?"
                    android:textColor="@color/appp_color"
                    android:padding="5px"
                    android:textSize="16dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inscrivez-vous"
                    android:textColor="@color/button_color"
                    android:padding="5px"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:onClick="register">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
